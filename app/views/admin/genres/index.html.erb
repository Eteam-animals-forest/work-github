<div>
  <h2>ジャンル一覧・追加</h2>
  
    <div>
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <div>
        <div>
          <%= f.label "ジャンル名" %>
        </div>
          <%= f.text_field :name %>
        <div>
          <%= f.submit "新規登録" %>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <table>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>