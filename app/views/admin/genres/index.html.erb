<div class="container">
  <h4 class="my-4">ジャンル一覧・追加</h4>
  
  <div class="row mb-4">
    <div class="col">
      <%= form_with model: @genre, url: admin_genres_path, local: true, class: "form-inline" do |f| %>
        <div class="form-group mr-2">
          <%= f.label :name, "ジャンル名", class: "mr-2" %>
          <%= f.text_field :name, class: "form-control mr-2", placeholder: "ジャンル名" %>
        </div>
        <%= f.submit "新規登録", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td class="text-center"><%= link_to '編集する', edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>