<div class="container">
  <div class="row">
    <div>
      <h2>商品詳細</h2>
      <%= image_tag @item.image, allback: "no_image.jpg" %>
    </div>
    <div>
      <table>
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td><%= price(@order_detail.price) %>（<%= @item.price %>）円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active %>
            販売中
            <% else %>
            販売停止中です
            <% end %>
          </td>
        </tr>
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
      </table>
    </div>
  </div>
</div>
