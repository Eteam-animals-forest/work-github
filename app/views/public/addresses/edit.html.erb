<div class="container mt-5 mb-5">

  <div class="row shipping-new">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2>配送先編集</h2>
    </div>
  </div>

  <dov class="row">
    <div>
      <%= form_with model: @address, local: true do |f| %>
        <tble>

          <tr>
            <th><%= f.label :郵便番号(ハイフンなし) %></th>
            <th><%= f.text_field :postal_code, placeholder:"0000000" %></th>
          </tr>

          <tr>
            <th><%= f.label :住所 %></th>
            <th><%= f.text_field :address, placeholder:"住所を入力してください", :size => "50" %></th>
          </tr>

          <tr>
            <th><%= f.label :"宛名" %></th>
            <th><%= f.text_field :shipping_name, placeholder:"名前を入力してください", :size => "30"%></th>
            <th class="ml-5"><%= f.submit "変更内容を保存", class:"btn btn-success" %></th>
          </tr>

        </tble>
        <% end %>

    </div>
  </dov>

</div>