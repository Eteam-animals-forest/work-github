<div class="container mt-5 mb-5">
  
  <div class="row mb-4">
    <div class="col-sm-10 px-sm-0 offset-1">
      <h4>配送先登録/一覧</h4>
    </div>
  </div>
  
  <div class="row mb-5">
    <div>
      <%= form_with model: @address, local: true do |f| %>
        <table>
          
          <tr>
            <th><%= f.label "郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
          </tr>
          
          <tr>
            <th><%= f.label "住所" %></th>
            <td><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", :size => "50" %></td>
          </tr>
          
          <tr>
            <th><%= f.label "宛名" %></th>
            <td><%= f.text_field :name, placeholder:"令和道子" %></td>
            <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
          </tr>
          
        </table>
      <% end %>
    </div>
  </div>
  
  <div>    </div>
  
  <div class="row">
    <div>
      <table class="table table-bordered table-sm" >
        
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        
        <tbody>
        <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
              <%= link_to "削除する", address_path(address), data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger", method: :delete %>
            </td>
          </tr>
        <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
  
</div>