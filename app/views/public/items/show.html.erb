<div class='container'>
  <div class="row">
    <div class="col-lg-3 py-5">
      ジャンル欄
    </div>
    <div class='col-lg-4 py-5'>
      <%= image_tag @item.get_image, size:'350x250' %>
    </div>
    <div class='col-lg-5 py-5'>
      <h3><%= @item.name %></h3>
      <h5><%= @item.introduction %></h5>
      <span style="font-size:30px">￥<%= @item.price.to_s(:delimited, delimiter: ',') %></span>
      <span>(税込)</span>
      <div>個数選択</div>
      
      <%= link_to "カートに入れる", cart_items_path %>　
      <!--?formwith?-->
    </div>
  </div>
</div>
<%= form_with model:@item, url: cart_items_path do |t| %>
