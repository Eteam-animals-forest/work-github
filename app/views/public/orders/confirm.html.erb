<div class="container p-3">
  <div class="row">
    <div class="col-md-12">
      <h3>注文情報確認</h3>

      <table class="table">
        <tr>
          <td>商品名</td>
          <td>単価(税込)</td>
          <td>数量</td>
          <td>小計</td>
        </tr>
        <% total = 0 %>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.image, size: "100x80" %>
                <strong><%= cart_item.item.name %></strong>
              </td>
              <td><%= (cart_item.item.price*1.1).to_i %></td>
              <td><%= cart_item.amount %></td>
              <td>
                  <% subtotal = ((cart_item.item.price*cart_item.amount)*1.1).to_i %>
                  <%= subtotal %>
              </td>
            </tr>
            <% total += (cart_item.item.price*cart_item.amount)*1.1 %>
          <% end %>
      </table>

    <div class="col-md-12">
      <table class="table">
        <tr>
          <td>送料</td>
          <td>
            <% @order.shipping_cost = 800 %>
            <%= @order.shipping_cost %>
          </td>
        </tr>
        <tr>
          <td>商品合計</td>
          <td><%= total.to_i %></td>
        </tr>
        <tr>
          <td>請求額</td>
          <td>
              <% @order.total_payment = @order.shipping_cost + total.to_i %>
              <%= @order.total_payment %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <table>
      <tr>
        <td>支払い方法</td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td>お届け先</td>
        <td>
          〒<%= @order.postal_code + "　" + @order.address %>
          <%= @order.name %>
        </td>
      </tr>
    </table>
    <div>
      <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
         <%= f.hidden_field :customer_id %>
         <%= f.hidden_field :shipping_cost %>
         <%= f.hidden_field :total_payment %>
         <%= f.hidden_field :payment_method %>
         <%= f.hidden_field :name %>
         <%= f.hidden_field :address %>
         <%= f.hidden_field :postal_code %>
         <%= f.hidden_field :status %>
         <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>